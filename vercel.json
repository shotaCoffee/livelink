{
  "version": 2,
  "builds": [
    {
      "src": "apps/web/package.json",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "cd ../.. && pnpm install && pnpm build",
        "outputDirectory": "apps/web/dist"
      }
    }
  ],
  "routes": [{ "src": "/(.*)", "dest": "apps/web/dist/$1" }]
}
